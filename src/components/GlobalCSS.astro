---
import fontBold from "../assets/fonts/PPNeueMontreal-Bold.otf";
import fontBook from "../assets/fonts/PPNeueMontreal-Book.otf";
import fontItalic from "../assets/fonts/PPNeueMontreal-Italic.otf";
import fontThin from "../assets/fonts/PPNeueMontreal-Thin.otf";
---

<style is:global>
  @font-face {
    font-family: "PP Neue Montreal";
    src: url(${fontThin});
    font-weight: 100;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "PP Neue Montreal";
    src: url(${fontBook});
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "PP Neue Montreal";
    src: url(${fontBold});
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "PP Neue Montreal";
    src: url(${fontItalic});
    font-weight: 400;
    font-style: italic;
    font-display: swap;
  }
</style>
